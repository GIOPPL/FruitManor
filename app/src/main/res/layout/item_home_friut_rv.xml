<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sim_cherry"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="95dp"
        android:layout_height="95dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【平台补贴到手46.9】蒙牛特仑苏纯牛奶150ml*12盒"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#C9C3C3"
            android:text="走亲访友不空手 品质好奶这里有"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp">
            <TextView
                android:id="@+id/tv_tag_discount"
                android:background="@drawable/home_description_tag_red"
                android:textColor="@color/priceColor"
                android:text="满50减6"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_arrive_time"
                android:background="@drawable/home_description_tag_grey"
                android:layout_marginLeft="10dp"
                android:text="24小时发货"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price"
                android:textSize="15sp"
                android:textColor="@color/priceColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥25.59"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/im_add"
                android:layout_marginRight="20dp"
                android:src="@mipmap/add_to_shop_car"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>