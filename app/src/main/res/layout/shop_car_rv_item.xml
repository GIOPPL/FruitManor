<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/im_select"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@mipmap/select_normal"
        android:layout_margin="10dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sim_cherry"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="95dp"
        android:layout_height="95dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【平台补贴到手46.9】蒙牛特仑苏纯牛奶150ml*12盒"
            android:textColor="@android:color/black"
            android:textSize="15dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price"
                android:textSize="15sp"
                android:textColor="@color/priceColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥25.59"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_find_like"
                android:background="@drawable/rect_first_color"
                android:text="找相似"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/firstColor"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>