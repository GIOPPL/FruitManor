<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".view.activity.OrderFormAllSeeActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="back"
            android:src="@mipmap/arraw_left_first_color"/>
        <TextView
            android:id="@+id/tv_activityAim"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送中订单"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <com.gioppl.fruitmanor.tool.RefreshableViewList
        android:id="@+id/rvl_shop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:background_image="@mipmap/bg_refresh"
        app:center_image="@mipmap/ic_triangle"
        app:child_at="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </com.gioppl.fruitmanor.tool.RefreshableViewList>

</LinearLayout>